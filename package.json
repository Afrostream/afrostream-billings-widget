{
  "name": "afrostream-billings-widget",
  "version": "0.0.1",
  "description": "Afrostream Widget Billing",
  "main": "src/js/checkout.js",
  "scripts": {
    "mkdirs": "mkdir -p dist",
    "start": "babel-node --presets es2015 -- scripts/server.js",
    "dev": "echo 'requiring node v4.4.5' && . ~/.nvm/nvm.sh && nvm use 4.4.5 && npm-run-all -p start watch",
    "watch": "npm run mkdirs && npm-run-all -p watch:*",
    "watch:css": "watchify -v -t less --clean-css src/css/checkout.less -o dist/checkout.min.css",
    "watch:js": "watchify -v -t babelify src/js/checkout.js -o dist/checkout.js",
    "build": "npm-run-all -p build:*",
    "build:polymer": "vulcanize src/polymer/index.html --inline-script --inline-css > dist/index.v.html | crisper -h dist/index.v.html -j dist/element.js",
    "build:sources": "browserify src/js/checkout.js -o dist/checkout.js",
    "build:css": "lessc --clean-css src/css/checkout.less dist/checkout.min.css",
    "build:rpc": "browserify src/js/core/rpc.js -o dist/rpc.js",
    "postinstall": "bower install && npm run build"
  },
  "keywords": [
    "afrostream",
    "widget",
    "billings"
  ],
  "author": "Afrostream, Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Afrostream/afrostream-billings-widget"
  },
  "babel": {},
  "devDependencies": {},
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "babel-cli": "^6.5.2",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "bower": "^1.7.9",
    "browserify": "^13.0.1",
    "connect": "^3.4.1",
    "cowsay": "^1.1.8",
    "crisper": "^2.0.2",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^2.3.0",
    "portscanner": "^1.0.0",
    "serve-static": "^1.11.1",
    "vulcanize": "^1.14.8",
    "watchify": "^3.7.0",
    "webpack": "^1.13.1"
  },
  "peerDependencies": {},
  "private": true,
  "engines": {
    "node": "4.4.5"
  }
}
